# =====================================================
# CONFIGURACIÓN DE SUPABASE
# =====================================================

# URL del proyecto de Supabase
SUPABASE_URL=https://tu-proyecto.supabase.co

# Clave pública anon key de Supabase
SUPABASE_ANON_KEY=tu-clave-anon-key-aqui

# Clave de servicio (service role key) - SOLO PARA BACKEND
# ¡NUNCA expongas esta clave en el frontend!
SUPABASE_SERVICE_KEY=tu-service-role-key-aqui

# =====================================================
# CONFIGURACIÓN DEL SERVIDOR
# =====================================================

# Puerto del servidor
PORT=3001

# Entorno de ejecución (development, production, test)
NODE_ENV=development

# =====================================================
# CONFIGURACIÓN DE CORS
# =====================================================

# Orígenes permitidos (separados por comas)
# Ejemplo: http://localhost:3000,http://localhost:5173,https://tu-dominio.com
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# =====================================================
# CONFIGURACIÓN DE SEGURIDAD
# =====================================================

# Secreto para JWT (si decides implementar autenticación personalizada)
JWT_SECRET=tu-secreto-muy-seguro-aqui

# Tiempo de expiración de tokens (en segundos)
JWT_EXPIRATION=86400

# =====================================================
# CONFIGURACIÓN DE LÍMITE DE TASA (RATE LIMITING)
# =====================================================

# Tiempo de ventana en minutos
RATE_LIMIT_WINDOW_MS=15

# Número máximo de peticiones por ventana
RATE_LIMIT_MAX_REQUESTS=100

# =====================================================
# CONFIGURACIÓN DE ARCHIVOS
# =====================================================

# Tamaño máximo de archivo en bytes (10MB)
MAX_FILE_SIZE=10485760

# Directorio temporal para archivos subidos
UPLOAD_DIR=./uploads

# =====================================================
# CONFIGURACIÓN DE LOGS
# =====================================================

# Nivel de logs (error, warn, info, debug)
LOG_LEVEL=info

# =====================================================
# CONFIGURACIÓN DE BASE DE DATOS
# =====================================================

# Prefijo para las tablas del inventario general
TABLE_PREFIX=inv_general_
